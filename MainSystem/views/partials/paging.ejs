<!-- Pagination -->
<!-- Logarithmic Page Navigation -->
<nav class="mt-3">
  <ul class="flex items-center -space-x-px h-8 text-sm">
    <% if (pager.curPage != 1) { %>
      <li>
        <button id="prevBtn" onclick='changePage(parseInt(<%= pager.curPage %>) - 1)' class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <span class="sr-only">Previous</span>
          <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4" />
          </svg>
        </button>
      </li>
    <% } %>

    <!-- Other pagination items -->
    <% if (pager.pages > 10) { %>
      <!-- Start First page -->
      <% if (pager.curPage == 1) { %>
        <li>
          <button class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 hover:cursor-pointer dark:border-gray-700 dark:bg-gray-700 dark:text-white">
            1
          </button>
        </li>
      <% } else { %>
        <li>
          <button onclick="changePage(1);" class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            1
          </button>
        </li>
      <% } %>
      <!-- End First page -->

      <% if (parseInt(pager.curPage) - 2 > 2) { %>
        <li>
          <button class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            ...
          </button>
        </li>
      <% } %>


      <% let start = Math.max(2, pager.curPage - 2); %>
      <% let end = Math.min(pager.pages - 1, start + 4); %>
      <% for (let i = start; i <= end; i++) { %>
        <% if (pager.curPage == i) { %>
          <li>
            <button class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 hover:cursor-pointer dark:border-gray-700 dark:bg-gray-700 dark:text-white">
              <%= i %>
            </button>
          </li>
        <% } else { %>
          <li>
            <button onclick='changePage(<%= i %>)' class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
              <%= i %>
            </button>
          </li>
        <% } %>
      <% } %>

      <% if (parseInt(pager.curPage) + 2 < parseInt(pager.pages) - 1) { %>
        <li>
          <button class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            ...
          </button>
        </li>
      <% } %>

      <!-- Start Last page -->
      <% if (pager.curPage == pager.pages) { %>
        <li>
          <button class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 hover:cursor-pointer dark:border-gray-700 dark:bg-gray-700 dark:text-white">
            <%= pager.pages %>
          </button>
        </li>
      <% } else { %>
        <li>
          <button onclick='changePage(<%= pager.pages %>)' class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            <%= pager.pages %>
          </button>
        </li>
      <% } %>
      <!-- End Last page -->

    <% } else { %>

      <% for (let i = 1; i <= pager.pages; i++) { %>
        <% if (pager.curPage == i) { %>
        <li>
          <button class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-blue-600 border border-blue-300 bg-blue-50 hover:bg-blue-100 hover:text-blue-700 hover:cursor-pointer dark:border-gray-700 dark:bg-gray-700 dark:text-white">
            <%= i %>
          </button>
        </li>
      <% } else { %>
        <li>
          <button onclick='changePage(<%= i %>)' class="pageItem flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:cursor-pointer hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
            <%= i %>
          </button>
        </li>
      <% } %>
      <% } %>
    <% } %>

    <% if (pager.curPage != pager.pages) { %>
      <li>
        <button onclick='changePage(parseInt(<%= pager.curPage %>) + 1)' id="nextBtn" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 dark:bg-gray-800 dark:border-gray-700 dark:text-gray-400 dark:hover:bg-gray-700 dark:hover:text-white">
          <span class="sr-only">Next</span>
          <svg class="w-2.5 h-2.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4" />
          </svg>
        </button>
      </li>
    <% } %>
  </ul>
</nav>

