<script>
    // Script for Category
    $(function () {
        const url = $('.page-item.active a').attr('href');

        $.ajax({
            type: "get",
            url: url,
            success: function (response) {
                $('#manager-table').html(response);
            },
            error: function (err) {
                console.log(err)
                //toastr.error('There are some errors!');
            }
        });

            $(document).on('click', '.page-item a', function (e) {
                e.preventDefault();
                $('.page-item').removeClass('active');
                const pageBtn = $(this);
                const url = pageBtn.attr('href');
                console.log(pageBtn)
                $.ajax({
                    type: "get",
                    url: url,
                    success: function (response) {
                        $('#manager-table').html(response);
                        pageBtn.parent().addClass('active');
                    },
                    error: function (err) {
                        console.log(err)
                        //toastr.error('There are some errors!');
                    }
                });


            });

    });
</script>