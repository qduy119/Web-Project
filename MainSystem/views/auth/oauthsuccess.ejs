<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>WEBify</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
            crossorigin="anonymous"
        ></script>
        <script
            src="https://code.jquery.com/jquery-3.7.1.min.js"
            integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo="
            crossorigin="anonymous"
        ></script>
        <script
            src="https://kit.fontawesome.com/61249f30eb.js"
            crossorigin="anonymous"
        ></script>
        <link href="img/favicon.ico" rel="icon" />
        <link rel="preconnect" href="https://fonts.gstatic.com" />
        <link href="css/style.css" rel="stylesheet" />
    </head>
    <body>
        <main
            class="img-cover js-fullheight main-login min-h-screen"
            style="background-image: url(img/bg.jpg)"
        >
            <div class="d-flex justify-content-center align-items-center h-100">
                <h3 class="text-uppercase text-primary font-weight-bold">
                    LOGIN SUCCESSFULLY. REDIRECTING TO HOMEPAGE...
                </h3>
            </div>
        </main>

        <script>
            const params = new URLSearchParams(window.location.search);
            const [id, token] = [params.get("id"), params.get("token")];
            localStorage.setItem("accessToken", token);
            (async () => {
                const temp = await fetch(
                    "https://localhost:8080/create-account-payment",
                    {
                        method: "post",
                        headers: {
                            "Content-type": "application/json",
                        },
                        body: JSON.stringify({ id }),
                    }
                );
                const { status } = await temp.json();
                if (status === 200) {
                    try {
                        await fetch("https://localhost:8080/authen-system", {
                            method: "post",
                            headers: {
                                "Content-type": "application/json",
                            },
                            body: JSON.stringify({ id }),
                            credentials: "include",
                        });
                        setTimeout(() => {
                            window.location.href = "/customer/homepage";
                        }, 1000);
                    } catch (error) {
                        console.log(error);
                    }
                } else if (status === 401) {
                    $(".error-login").html("Lỗi xác thực");
                }
            })();
            setTimeout(() => {
                window.location.href = "/customer/homepage"; // comment here
            }, 1000);
        </script>
    </body>
</html>
