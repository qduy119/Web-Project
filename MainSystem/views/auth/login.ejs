            //             "Content-type": "application/json",
            //         },
            //         body: JSON.stringify({ id }),
            //         credentials: "include",
            //     }
            // );
            // const { status } = await temp.json();
            // if (status === 200) {
            //     window.location.href = "/customer/homepage";
            // } else if (status === 401) {
            //     $(".error-login").html("Lỗi xác thực");
            // }
            window.location.href = "/customer/homepage"; // comment here
        }
    });
</script>
