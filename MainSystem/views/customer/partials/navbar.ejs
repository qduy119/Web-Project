<div class="container-fluid bg-dark mb-30">
    <div class="row px-xl-5 py-3">
        <div class="col-lg-3 d-none d-lg-block">
            <a
                class="btn d-flex align-items-center justify-content-between bg-primary w-100"
                data-bs-toggle="collapse"
                href="#navbar-vertical"
                style="height: 65px; padding: 0 30px;"
            >
                <h6 class="text-dark m-0"><i
                        class="fa fa-bars mr-2"
                    ></i>Danh mục</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav
                class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light shadow-lg"
                id="navbar-vertical"
                style="width: calc(100% - 30px); z-index: 999;"
            >
                <div class="navbar-nav w-100">
                    <% categories.forEach(category => { %>
                        <a href="/customer/category/<%= category.id %>" class="nav-item nav-link"><%= category.title %></a>
                    <% }) %>
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-0">
                <a href="/customer/homepage" class="text-decoration-none d-block d-lg-none">
                    <span
                        class="h1 text-uppercase text-primary bg-dark px-2"
                    >WEBIFY</span>
                </a>
                <button
                    type="button"
                    class="navbar-toggler"
                    data-bs-toggle="collapse"
                    data-bs-target="#navbarCollapse"
                >
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div
                    class="collapse navbar-collapse justify-content-between"
                    id="navbarCollapse"
                >
                    <div class="navbar-nav mr-auto py-0">
                        <a href="/customer/homepage" class="nav-item nav-link active">Home</a>
                    </div>
                    <div class="navbar-nav ml-auto py-0 d-none d-lg-block">
                        <a href="/customer/cart" class="btn px-0 ml-3">
                            <i class="fas fa-shopping-cart text-primary"></i>
                            <span
                                class="badge text-secondary border border-secondary rounded-circle"
                                style="padding-bottom: 2px;"
                            >0</span>
                        </a>
                    </div>
                </div>
            </nav>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="d-block d-lg-none mt-2" style="width: 200px;">
                    <a
                        class="btn d-flex align-items-center justify-content-between bg-primary w-100"
                        data-bs-toggle="collapse"
                        href="#"
                        style="height: 65px; padding: 0 30px;"
                    >
                        <h6 class="text-dark m-0"><i
                                class="fa fa-bars mr-2"
                            ></i>Danh mục</h6>
                        <i class="fa fa-angle-down text-dark"></i>
                    </a>
                    <nav
                        class="collapse position-absolute navbar navbar-vertical navbar-light align-items-start p-0 bg-light shadow-lg"
                        id="navbar-vertical"
                        style="width: 200px; z-index: 999;"
                    >
                        <div class="navbar-nav w-100">
                            <% categories.forEach(category => { %>
                                <a href="/customer/category/<%= category.id %>" class="nav-item nav-link"><%= category.title %></a>
                            <% }) %>
                        </div>
                    </nav>
                </div>
                <form action="/customer/search" class="mt-3 d-block d-lg-none">
                    <div class="input-group">
                        <input
                            type="text"
                            class="form-control"
                            name="query"
                            placeholder="Search for products"
                        />
                        <div class="input-group-btn">
                            <button class="btn btn-primary bg-transparent search-btn text-primary border-left-0 h-100" type="submit">
                                <i class="fa fa-search text-primary"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>