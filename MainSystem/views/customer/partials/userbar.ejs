<div class="dropdown">
    <div
        class="d-flex align-items-center justify-content-center p-2 rounded-circle text-white cursor"
        data-bs-toggle="dropdown"
        style="width: 50px; height: 50px"
    >
        <img
            src="<%= user.avatar %>"
            alt="Avatar"
            width="50"
            height="50"
            class="rounded-circle cursor"
        />
    </div>
    <ul class="dropdown-menu dropdown-menu-end">
        <li>
            <a class="dropdown-item" href="/customer/order">Đơn hàng của tôi</a>
        </li>
        <li><a class="dropdown-item logout" href="/logout">Đăng xuất</a></li>
    </ul>
</div>

<script>
    $(".logout").on("click", async (e) => {
        e.preventDefault();
        await privateAxios().get("/logout", {
            withCredentials: true,
        });
        localStorage.removeItem("accessToken");
        window.location.href = "/customer/homepage";
    });
</script>
